
extends ../layout

block content	
		div.panel.panel-default
			div.panel-heading Welcome to #{title}
			div.panel-body 
				form#settingForm.form-horizontal

					div.form-group
						label.col-md-4.control-label Avatar
						div.col-md-3
							div.inner
								div
									a(href="/users/home").user-avatar
										img(src="#{session.user.userAvatar}")#avatar
										input(name="userAvatar" id="userAvatar" value="#{session.user.userAvatar}" type="hidden")
									span
										button(type="button" id="uploadUserAvatar").btn.btn-default.btn-sm Upload
										input(name="imageInput" id="imageInput" type="file" style="display:none")

					div.form-group
						label.col-md-4.control-label Name
						div.col-md-3
							input(name="userName" value="#{session.user.userName}").form-control.setting-form
							//- div#userNameAlert.alert-required This field is required
					div.form-group
						label.col-md-4.control-label Email
						div.col-md-3
							input(name="userEmail" value="#{session.user.userEmail}" readonly="readonly").form-control.setting-form
							//- div#userEmailAlert.alert-required Email is not right
					div.form-group
						label.col-md-4.control-label Interest
						div(style='width:150px; margin:0px auto;')
							select#example-getting-started(name= 'interest' multiple='multiple')
								.container
									.row
										.col-md-6
											option(value='Accounting') Accounting
											option(value='Banking, Finance, Insurance') Banking, Finance, Insurance
										
											option(value='Computer Science') Computer Science
									
											option(value='Information Management') Information Management
										.col-md-6
								
											option(value='Management Science') Management Science
											option(value='Military') Military
											option(value='Physics') Physics
											option(value='Political Science') Political Science
											option(value='Properties') Properties
											option(value='Religions') Religions

					div.form-group
						label.col-md-4.control-label Skills
						div(style='width:150px; margin:0px auto;')
							select.example-getting-started(name = "skills" multiple='multiple')
								.container
									.row
										.col-md-6
											option(value='Accounting') Accounting
											option(value='Banking, Finance, Insurance') Banking, Finance, Insurance
										
											option(value='Computer Science') Computer Science
									
											option(value='Information Management') Information Management
										.col-md-6
								
											option(value='Management Science') Management Science
											option(value='Military') Military
											option(value='Physics') Physics
											option(value='Political Science') Political Science
											option(value='Properties') Properties
											option(value='Religions') Religions
					
					div.form-group
						div.col-md-6.col-md-offset-4
							button(type="submit").btn.btn-primary Submit
							//- div#submitAlert.alert-required Email is not right





